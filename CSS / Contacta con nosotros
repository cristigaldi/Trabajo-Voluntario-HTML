/*contacta con nosotros*/

#rellenar {
    text-align: center;
 }
 
 .caja_contacta {
    background-color: rgba(168, 255, 226, 0.283);
    text-align: center;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 2rem;
 }
 
 /*datos a rellenar*/
 
 .input {
    position: relative;
    width: var(--form-width);
 }
 
 .nombre,
 .apellido,
 .numero,
 .email {
    font-size: 16px;
    /* la fuente*/
    padding: 10px 10px 10px 5px;
    /* relleno */
    display: block;
    /* tamaño */
    width: var(--form-width);
    /* ancho */
    border: none;
    /* bordes */
    border-bottom: 1px solid #515151;
    background: transparent;
    /*fondo */
 
 }
 
 .nombre:focus,
 .apellido:focus,
 .numero:focus,
 .email:focus {
    outline: none;
    /*Elimina el contorno predeterminado cuando el campo de entrada está enfocado*/
 }
 
 label {
    color: #999;
    font-size: 18px;
    font-weight: normal;
    position: absolute;
    pointer-events: none;
    left: 5px;
    top: 10px;
    transition: 0.2s ease all;
    -moz-transition: 0.2s ease all;
    -webkit-transition: 0.2s ease all;
 }
 
 .nombre:focus~label,
 .nombre:valid~label,
 .apellido:focus~label,
 .apellido:valid~label,
 .numero:focus~label,
 .numero:valid~label,
 .email:focus~label,
 .email:valid~label {
    top: -20px;
    font-size: 14px;
    color: #5264AE;
 }
 
 .bar {
    /*Define la barra como un bloque con una anchura específica */
    position: relative;
    display: block;
 }
 
 .bar:before,
 .bar:after {
    content: '';
    height: 2px;
    width: 0;
    bottom: 1px;
    position: absolute;
    background: #5264AE;
    transition: 0.2s ease all;
    -moz-transition: 0.2s ease all;
    -webkit-transition: 0.2s ease all;
 }
 
 .bar:before {
    left: 50%;
 }
 
 .bar:after {
    right: 50%;
 }
 
 .nombre:focus~.bar:before,
 .nombre:focus~.bar:after,
 .apellido:focus~.bar:before,
 .apellido:focus~.bar:after,
 .numero:focus~.bar:before,
 .numero:focus~.bar:after,
 .email:focus~.bar:before,
 .email:focus~.bar:after {
    width: 50%;
 }
 
 .highlight {
    position: absolute;
    height: 60%;
    width: 100px;
    top: 25%;
    left: 0;
    pointer-events: none;
    opacity: 0.5;
 }
 
 .nombre:focus~.highlight,
 .apellido:focus~.highlight,
 .numero:focus~.highlight,
 .email:focus~.highlight {
    animation: inputHighlighter 0.3s ease;
 }
 
 /*boton de enviar*/
 
 button {
    position: relative;
    display: inline-block;
    margin: 15px;
    padding: 15px 30px;
    text-align: center;
    font-size: 18px;
    letter-spacing: 1px;
    text-decoration: none;
    color: #725AC1;
    background: transparent;
    cursor: pointer;
    transition: ease-out 0.5s;
    border: 2px solid #725AC1;
    border-radius: 10px;
    box-shadow: inset 0 0 0 0 #725AC1;
 }
 
 button:hover {
    color: white;
    box-shadow: inset 0 -100px 0 0 #725AC1;
 }
 
 button:active {
    transform: scale(0.9);
 }
 
 button input {
    border: none;
    background: none;
    color: inherit;
    font-size: inherit;
    cursor: pointer;
    outline: none;
 }
 
 button input:hover {
    text-decoration: underline;
    /* O cualquier otro estilo que prefieras en hover */
 }


